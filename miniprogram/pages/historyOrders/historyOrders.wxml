<view  wx:for="{{newRepairOrders}}" wx:key="{{index}}">
<view class="title" bindtap="oderdetails">
<view class="left">
<i class="fa fa-flag fa-2x" style="color:#FFFFFF;"></i>
<text>{{item.unit_address}}</text>
</view>
<view class="right">
<text>已结束</text>
<i class="fa fa-angle-right fa-2x" style="color:#FFFFFF;"></i>
</view>
</view>

<view class="detail_titile">
  <van-row gutter="20">
  <van-col span="8"><text>申请编号</text></van-col>
  <van-col span="8"><text>申请时间</text></van-col>
  <van-col span="8"><text>报修设备</text></van-col>
</van-row>
</view>
<view class="detail_content">
  <van-row gutter="20">
  <van-col span="8"><text>{{item.order_id}}</text></van-col>
  <van-col span="8"><text>2019-4-1 10:23:04</text></van-col>
  <van-col span="8"><text style="color:#FF5722">{{item.device_name}}</text></van-col>
</van-row>
</view>
</view>
